<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fm_container"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_margin="4dp"
        android:layout_weight=".2"
        android:background="@color/skyblue"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_weight=".4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Scaneo rápido"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="Scaneo en singular "
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="336dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listview"
                android:layout_width="204dp"
                android:layout_height="match_parent"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="199dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usuarios"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:text="Total de paquetes escaneados: "
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contarelementos"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnConfirmarDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:text="Enviar datos scaneados" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:onClick="onClick"
            android:text="Cerrar sesión"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_result_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/latTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/lonTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="403dp"
            android:layout_height="15dp"
            android:layout_margin="4dp" />

    </LinearLayout>


</LinearLayout>